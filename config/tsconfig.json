{
    "compilerOptions": {
        "target": "es2015",
        "jsx": "react",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noImplicitThis": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./",
        // avoid issues with imports when using npm linked packages
        "paths": {
            "react": [
                "node_modules/@types/react"
            ]
        }
    },
    "compileOnSave": false,
    "include": [
        "src/**/*",
        "typings/**/*"
    ]
}